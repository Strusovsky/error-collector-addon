{

  "manifest_version": 2,
  "name": "Error Collector",
  "version": "1.0",

  "description": "Lets the user collect text errors like grammar mistakes and typos",

  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "Error Collector",
    "browser_style": false
  },

  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ],

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+E"
      }
    }
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
    }
  ]

}